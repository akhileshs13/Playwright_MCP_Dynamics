{
  "name": "playwright-test-automation",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts --ignore-pattern allure-report/**",
    "test": "npx playwright test",
    "test:MCP": "npx playwright test --config=playwright.config.mcp.ts",
    "test:setupMCP": "npx playwright test --config=playwright.config.mcp.ts --project=setup",
    "test:allureMCP": "npx playwright test --config=playwright.config.mcp.ts --reporter=allure-playwright",
    "test:script": "powershell ./scripts/runRegressionAll.ps1",
    "test:cases": "rimraf allure-results && cross-env ENV_FILE=.env TARGET_ENV=LOCAL npx playwright test suites/demoTest/ --grep \"@Demo\"",
    "test:demo": "npx playwright test suites/demoTest/",
    "test:demo:create": "npx playwright test suites/demoTest/createNewCases.spec.ts",
    "test:demo:edit": "npx playwright test suites/demoTest/editNewCases.spec.ts",
    "test:demo:resolve": "npx playwright test suites/demoTest/resolveNewCases.spec.ts",
    "test:demo:sequential": "npx playwright test suites/demoTest/createNewCases.spec.ts && npx playwright test suites/demoTest/editNewCases.spec.ts && npx playwright test suites/demoTest/resolveNewCases.spec.ts",
    "generate:codegen": "npx playwright codegen --load-storage=storage-state/storageState.json https://org6d780a22.crm.dynamics.com/main.aspx --output=suites/codegenTest/recordedTest.spec.ts",
    "test:codegen": "cross-env SKIP_GLOBAL_SETUP=true npx playwright test suites/codegenTest/recordedTest.spec.ts",
    "gen:env-props": "ts-node scripts/generateEnvironmentProperties.ts",
    "test:allureReport": "npm run gen:env-props && xcopy .\\allure-report\\history .\\allure-results\\history /E /I /Y && xcopy env.test\\environment.properties allure-results\\ && npx allure generate ./allure-results --clean -o allure-report --name 'Dynamics-365-Project' && npx allure open allure-report",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:serve": "npx allure serve allure-results",
    "allure:open": "npx allure open allure-report"
  },
  "keywords": [],
  "author": "Automation_QA",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/mcp": "^0.0.32",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.17",
    "@types/winston": "^2.4.4",
    "allure-commandline": "^2.34.0",
    "allure-playwright": "^3.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "globals": "^16.2.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "chrome-launcher": "^1.2.0",
    "dotenv": "^16.4.7",
    "node-schedule": "^2.1.1",
    "open": "^10.1.2",
    "playwright-network-cache": "^0.2.2",
    "winston": "^3.17.0"
  }
}
